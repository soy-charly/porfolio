{
  "version": 2,
  "builds": [
    {
      "src": "index.html",
      "use": "@vercel/static"
    }
  ],
  "cleanUrls": true,
  "redirects": [
    {
      "source": "/pages/:page(aboutme|contact|knowledge|portfolio)(.html)?",
      "destination": "/:page",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/:page(aboutme|contact|knowledge|portfolio)",
      "destination": "/pages/:page.html"
    }
  ]
}

{
  "cleanUrls": true,
  "redirects": [
    {
      "source": "/pages/:page(aboutme|contact|knowledge|portfolio)",
      "destination": "/:page",
      "permanent": true
    },
    {
      "source": "/pages/:page(aboutme|contact|knowledge|portfolio).html",
      "destination": "/:page",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/:page(aboutme|contact|knowledge|portfolio)",
      "destination": "/pages/:page.html"
    }
  ]
}
